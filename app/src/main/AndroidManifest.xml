    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:name="com.espacepiins.messenger.application.MessengerApplicationContext"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyC0nAtKza2k3w8pQErhicyIOKlrdecjEYs"/>

        <activity
            android:name="com.espacepiins.messenger.ui.SplashActivity"
            android:theme="@android:style/Theme.Material.Light.NoActionBar.Fullscreen">
            android:theme="@android:style/Theme.Material.Light.NoActionBar.Fullscreen"
            android:name="com.espacepiins.messenger.ui.SplashActivity">
            <!--<intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>-->
        </activity>

        <activity android:name="com.espacepiins.messenger.ui.ProfileActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="com.espacepiins.messenger.ui.RoomActivity">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>
        <activity
            android:name="com.espacepiins.messenger.ui.ContactSearchResultsActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>
        </activity>

        <activity android:name="com.espacepiins.messenger.ui.ContactActivity"
            android:parentActivityName="com.espacepiins.messenger.ui.RoomActivity">

        </activity>

        <activity android:name=".ui.AuthActivity">

        </activity>

        <service
            android:name="com.espacepiins.messenger.service.ContactImportService"
